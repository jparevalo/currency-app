<h1>Currency App - SBIF</h1>
<div class="container">
  <%= render 'date_form' %>
</div>
<div class="">
  <div class="row">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-5">
          <div>
            <h3>UF</h3>
          </div>
          <table class="table table-striped table-bordered table-condensed">
            <thead>
            <tr>
              <th>Día</th>
              <th>Valor (CLP)</th>
            </tr>
            </thead>
            <tbody>
            <% @uf_values.each do |day| %>
              <tr>
                <td><%= day["Fecha"]%></td>
                <td><%= day["Valor"]%></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
        <div class="col-md-5">
          <div>
            <h3>Dólar</h3>
          </div>
          <table class="table table-striped table-bordered table-condensed">
            <thead>
            <tr>
              <th>Día</th>
              <th>Valor (CLP)</th>
            </tr>
            </thead>
            <tbody>
            <% @usd_values.each do |day| %>
                <tr>
                  <td><%= day["Fecha"]%></td>
                  <td><%= day["Valor"]%></td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>