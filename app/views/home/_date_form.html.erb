<div style="margin-top: 20px">
  <%= form_for :range, url: home_update_path, method: :get do |f| %>
      <div class="row row-centered">
        <div class="col-md-6 col-centered">
          <div class="">
            <%= f.label :start_date, "Desde: " %>
            <%= f.text_field :start_date, data:{ provide:'datepicker' }, required: :true, value: @start_date.strftime('%m/%d/%Y')%>
          </div>
        </div>
        <div class="col-md-6 col-centered">
          <div class="">
            <%= f.label :end_date, "Hasta: " %>
            <%= f.text_field :end_date, data:{ provide:'datepicker' }, required: :true, value: @end_date.strftime('%m/%d/%Y') %>
          </div>
        </div>
      </div>
      <div class="center" style="margin-top: 20px">
        <%= f.submit 'Aplicar'%>
      </div>
  <% end %>
</div>